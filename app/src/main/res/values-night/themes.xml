<resources>

    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.OwlMail" parent="Base.Theme.Owlmail">
        <!--Material color attributes (dark theme) -->

        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <item name="colorPrimary">@color/dark_base_fill</item>
        <item name="colorPrimaryVariant">@color/dark_base_fill</item>
        <item name="colorOnPrimary">@color/dark_text_tertiary</item>

        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <item name="colorSecondary">@color/dark_base_fill</item>
        <item name="colorSecondaryVariant">@color/dark_base_fill</item>
        <item name="colorOnSecondary">@color/dark_text_tertiary</item>


        <!--Tap-->
        <item name="colorControlHighlight">@color/dark_supporting_divider</item>

        <!--Background-->
        <item name="android:colorBackground">@color/dark_base_0</item>
        <item name="colorOnBackground">@color/dark_text_primary</item>

        <!--Surface-->
        <item name="colorSurface">@color/dark_base_1</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>


        <!--ERROR-->
        <item name="colorError">@color/accent_red</item>
        <item name="colorOnError">@color/dark_text_tertiary</item>

        <!--CUSTOM-->
        <item name="colorBase1">@color/dark_base_1</item>
        <item name="colorBase0">@color/dark_base_0</item>
        <item name="colorBaseFill">@color/dark_base_fill</item>
        <item name="colorTextPrimary">@color/dark_text_primary</item>
        <item name="colorTextSecondary">@color/dark_text_secondary</item>
        <item name="colorTextTertiary">@color/dark_text_tertiary</item>
        <item name="colorDivider">@color/dark_supporting_divider</item>
        <item name="colorOverlay">@color/dark_supporting_overlay</item>
        <item name="colorPrimaryFocus">@color/dark_supporting_primary_focus</item>
        <item name="colorGreenFocus">@color/dark__supporting_green_focus</item>
        <item name="colorRedFocus">@color/dark_supporting_red_focus</item>
        <item name="colorGreen">@color/accent_green</item>
        <item name="colorBlue">@color/accent_blue</item>
        <item name="colorRed">@color/accent_red</item>
        <item name="colorOrange">@color/accent_orange</item>
        <item name="colorPureWhite">@color/light_base_1</item>
        <item name="colorIconPrimary">@color/light_base_1</item>
        <item name="colorIconSecondary">@color/dark_text_secondary</item>

        <!--TEXT INPUT-->
        <item name="colorTextInput">@color/dark_supporting_divider</item>
        <item name="colorTextInputPressed">@color/dark_base_fill</item>
        <item name="colorTextInputFocused">@color/dark_base_fill</item>

        <!--BUTTON COLORS-->
        <item name="colorButtonPrimary">@color/white_variant_1</item>
        <item name="colorButtonPrimaryPressed">@color/grey_variant_1</item>
        <item name="colorButtonSecondary">@color/dark_base_1</item>
        <item name="colorButtonSecondaryPressed">@color/dark_text_tertiary</item>
        <item name="colorButtonDanger">@color/dark_text_tertiary</item>
        <item name="colorButtonDangerPressed">@color/redish_black</item>
        <item name="colorButtonLink">@android:color/transparent</item>
        <item name="colorButtonLinkPressed">@color/dark_supporting_divider</item>

        <!--BUTTON COLORS-->
        <item name="colorHeaderBg">@color/dark_base_1</item>

        <item name="android:statusBarColor">@color/dark_base_1</item>
    </style>
</resources>