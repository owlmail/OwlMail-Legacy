<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_splash"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragment.SplashFragment"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_baseUrlSetUpFragment"
            app:destination="@id/baseUrlSetUpFragment" />
        <action
            android:id="@+id/action_splashFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/baseUrlSetUpFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragment.BaseURLFragment"
        tools:layout="@layout/fragment_base_url">
        <argument
            android:name="sessionDetails"
            app:argType="github.sachin2dehury.owlmail.data.SessionDetails" />
        <action
            android:id="@+id/action_baseUrlSetUpFragment_to_authFragment"
            app:destination="@id/authFragment" />
    </fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragment.AuthFragment"
        tools:layout="@layout/fragment_auth">
        <argument
            android:name="sessionDetails"
            app:argType="github.sachin2dehury.owlmail.data.SessionDetails" />
        <action
            android:id="@+id/action_authFragment_to_searchFragment"
            app:destination="@id/searchFragment" />

    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="github.sachin2dehury.owlmail.ui.fragment.SearchTabFragment"
        android:label="SearchTabFragment">
        <argument
            android:name="sessionDetails"
            app:argType="github.sachin2dehury.owlmail.data.SessionDetails" />
    </fragment>

</navigation>