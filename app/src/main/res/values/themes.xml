<resources>

    <style name="Theme.OwlMail" parent="Base.Theme.Owlmail" />

    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Theme.Owlmail" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Material color attributes (light theme) -->

        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->

        <item name="colorPrimary">@color/light_base_fill</item>
        <item name="colorPrimaryVariant">@color/light_base_fill</item>
        <item name="colorOnPrimary">@color/light_text_tertiary</item>

        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <item name="colorSecondary">@color/light_base_fill</item>
        <item name="colorSecondaryVariant">@color/light_base_fill</item>
        <item name="colorOnSecondary">@color/light_text_tertiary</item>


        <!--Background-->
        <item name="android:colorBackground">@color/light_base_0</item>
        <item name="colorOnBackground">@color/light_text_primary</item>

        <!--Surface-->
        <item name="colorSurface">@color/light_base_1</item>
        <item name="colorOnSurface">@color/light_text_primary</item>


        <!--ERROR-->
        <item name="colorError">@color/accent_red</item>
        <item name="colorOnError">@color/light_text_tertiary</item>

        <!--TAP-->
        <item name="colorControlHighlight">@color/light_supporting_divider</item>
        <!--CUSTOM -->
        <item name="colorBase1">@color/light_base_1</item>
        <item name="colorBase0">@color/light_base_0</item>
        <item name="colorBaseFill">@color/light_base_fill</item>
        <item name="colorTextPrimary">@color/light_text_primary</item>
        <item name="colorTextSecondary">@color/light_text_secondary</item>
        <item name="colorTextTertiary">@color/light_text_tertiary</item>
        <item name="colorDivider">@color/light_supporting_divider</item>
        <item name="colorOverlay">@color/light_supporting_overlay</item>
        <item name="colorPrimaryFocus">@color/light_supporting_primary_focus</item>
        <item name="colorGreenFocus">@color/light_supporting_green_focus</item>
        <item name="colorRedFocus">@color/light_supporting_red_focus</item>
        <item name="colorGreen">@color/accent_green</item>
        <item name="colorBlue">@color/accent_blue</item>
        <item name="colorRed">@color/accent_red</item>
        <item name="colorOrange">@color/accent_orange</item>
        <item name="colorPureWhite">@color/light_base_1</item>


        <item name="colorIconPrimary">@color/light_base_fill</item>
        <item name="colorIconSecondary">@color/light_text_secondary</item>


        <!--TEXT INPUT-->
        <item name="colorTextInput">@color/light_supporting_divider</item>
        <item name="colorTextInputPressed">@color/light_base_fill</item>
        <item name="colorTextInputFocused">@color/light_base_fill</item>

        <!--BUTTON COLORS-->
        <item name="colorButtonPreSub">@color/accent_green</item>
        <item name="colorButtonPreSubPressed">@color/green_dark</item>
        <item name="colorButtonPrimary">@color/light_base_fill</item>
        <item name="colorButtonPrimaryPressed">@color/light_supporting_primary_focus</item>
        <item name="colorButtonSecondary">@color/light_base_1</item>
        <item name="colorButtonSecondaryPressed">@color/light_base_0</item>
        <item name="colorButtonDanger">@color/light_base_1</item>
        <item name="colorButtonDangerPressed">@color/red_variant_3</item>
        <item name="colorButtonLink">@android:color/transparent</item>
        <item name="colorButtonLinkPressed">@color/light_supporting_divider</item>
        <item name="colorButtonDangerFilled">@color/accent_red</item>
        <item name="colorButtonDangerFilledPressed">@color/red_fill_focus</item>

        <item name="colorHeaderBg">@color/light_base_1</item>

        <item name="android:statusBarColor">@color/light_base_1</item>

        <!--TYPOGRAPHY-->
        <item name="textAppearanceTitle1">@style/TextAppearance.Title1</item>
        <item name="textAppearanceTitle2">@style/TextAppearance.Title2</item>
        <item name="textAppearanceTitle3">@style/TextAppearance.Title3</item>
        <item name="textAppearanceTitle4">@style/TextAppearance.Title4</item>
        <item name="textAppearanceTitle5">@style/TextAppearance.Title5</item>
        <item name="textAppearanceTitle6">@style/TextAppearance.Title6</item>
        <item name="textAppearanceSmall14">@style/TextAppearance.Small14</item>
        <item name="textAppearanceSmall12">@style/TextAppearance.Small12</item>
        <item name="textAppearanceMiniPrimary">@style/TextAppearance.Mini.Primary</item>
        <item name="textAppearanceMiniSecondary">@style/TextAppearance.Mini.Secondary</item>
        <item name="textAppearanceMicro">@style/TextAppearance.Micro</item>

        <item name="textInputStyle">@style/OwlMail.TextInputStyle</item>
    </style>

    <style name="OwlMail.TextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/dp_32</item>
        <item name="boxCornerRadiusBottomStart">@dimen/dp_32</item>
        <item name="boxCornerRadiusTopEnd">@dimen/dp_32</item>
        <item name="boxCornerRadiusTopStart">@dimen/dp_32</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">30</item>
        <item name="counterOverflowTextAppearance">?attr/textAppearanceMiniPrimary</item>
        <item name="counterTextAppearance">?attr/textAppearanceMiniPrimary</item>
        <item name="endIconMode">clear_text</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">?attr/textAppearanceMiniPrimary</item>
        <item name="hintEnabled">true</item>
        <item name="helperTextEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="helperTextTextAppearance">?attr/textAppearanceMiniPrimary</item>
        <item name="hintTextAppearance">?attr/textAppearanceMiniPrimary</item>
        <item name="android:textAppearance">?attr/textAppearanceSmall14</item>
        <item name="placeholderTextAppearance">?attr/textAppearanceMiniPrimary</item>
        <item name="prefixTextAppearance">?attr/textAppearanceMiniPrimary</item>
        <item name="suffixTextAppearance">?attr/textAppearanceMiniPrimary</item>
        <item name="android:inputType">textAutoComplete</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="OwlMail.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:textAppearance">?attr/textAppearanceSmall14</item>
        <item name="cornerRadius">@dimen/dp_32</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="OwlMail.UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="cornerRadius">@dimen/dp_32</item>
        <item name="iconGravity">textEnd</item>
    </style>
</resources>